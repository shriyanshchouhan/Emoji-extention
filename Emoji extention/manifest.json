{
  "manifest_version": 3,
  "name": "Text to emoji",
  "description": "Convert text to emoji representations",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "clipboardWrite"
  ],
  "icons":{
    "128":"logo.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
